{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Auto Detect Debug",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug ..",
            "options": {
                "cwd": "${fileDirname}/.."
            },
            "group": "build",
            "presentation": {
                "reveal": "silent", // No te molesta si sale bien
                "panel": "shared",
                "close": true
            }
        },
        {
            "label": "CMake: Auto Make (warnings)",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${fileDirname}/../build"
            },
            "group": "build",
            "dependsOn": "CMake: Auto Detect Debug",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "close": true
            }
        }
    ]
}